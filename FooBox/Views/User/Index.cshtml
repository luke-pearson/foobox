@model IEnumerable<FooBox.User>

@{
    ViewBag.Title = "Index";
}
<style type='text/css'>
    td:nth-child(1n){text-align: right;}
    td:nth-child(8n){text-align: right;}
    td:nth-child(9n){text-align: right;}
</style>
<h2>Index</h2>
<h4>User</h4>
<p>
    @Html.ActionLink("Create New", "UserCreate")
</p>
<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuotaLimit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuotaCharged)
        </th>
    </tr>

@foreach (var item in Model) {
    if (item.State == ObjectState.Normal) { 
        <tr>
            <td>
                @Html.ActionLink("Edit", "UserEdit", new { id=item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuotaLimit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuotaCharged)
            </td>

        </tr>
    }
}

</table>
